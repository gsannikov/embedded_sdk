        "gunzip"          : { "path_completion": true , "only_dirs": false    },
        "gzip"            : { "path_completion": true , "only_dirs": false    },
        "head"            : { "path_completion": true , "only_dirs": false    },
        "help"            : { "path_completion": false                        },
