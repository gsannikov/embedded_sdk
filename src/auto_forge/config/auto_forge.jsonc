        // or produce continuous output unsuitable for standard command capture.
        "apt*",
        "bash",
        "zsh",
        "btop",
        "bat",
        "cat",
        "clear",
        "dnf*",
        "htop",
        "less",
        "nano",
        "pico",
        "sudo",
        "top",
