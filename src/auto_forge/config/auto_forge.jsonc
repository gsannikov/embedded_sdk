        "alias"           : { "path_completion": false                        },
        "apt"             : { "path_completion": false                        },
        "cat"             : { "path_completion": true , "only_dirs": false    },
        "e"               : { "path_completion": true , "only_dirs": false    }, // Package 'edit' command alias
